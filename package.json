{
  "name": "aemsync",
  "displayName": "AEM-Sync",
  "description": "Sync changes to AEM automatically (Alpha release)",
  "version": "0.1.1",
  "publisher": "Yinkai15",
  "preview": true,
  "keywords": [
    "aem",
    "adobe experience manager"
  ],
  "icon": "icon.jpg",
  "engines": {
    "vscode": "^1.24.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:aemsync.sayHello",
    "workspaceContains:**/jcr_root",
    "*"
  ],
  "homepage": "https://github.com/Yinkai15/vscode-aem-sync/blob/master/README.md",
  "main": "./src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "AEM-Sync configuration",
      "properties": {
        "aemsync.host": {
          "type": "string",
          "default": "localhost",
          "description": "The hostname/ip to connect to AEM with (Defaults to localhost)"
        },
        "aemsync.port": {
          "type": "number",
          "default": 4502,
          "description": "The port to connect to AEM with (Defaults to 4502)"
        },
        "aemsync.username": {
          "type": "string",
          "default": "admin",
          "description": "The username to use to connect to AEM (Defaults to admin)"
        },
        "aemsync.password": {
          "type": "string",
          "default": "admin",
          "description": "The password to use to connect to AEM (Defaults to admin)"
        }
      }
    },
    "commands": [
      {
        "command": "aemsync.syncFromAEM",
        "title": "Sync file from AEM"
      },
      {
        "command": "aemsync.syncToAEM",
        "title": "Sync file to AEM"
      }
    ],
    "menus": {
      "commandPalette": [{
        "command": "aemsync.syncFromAEM",
        "when": "resourceFilename == thisshouldneverexist"
      }, {
        "command": "aemsync.syncToAEM",
        "when": "resourceFilename == thisshouldneverexist"
      }],
      "explorer/context": [{
        "group": "aemsync",
        "command": "aemsync.syncFromAEM"
      }, {
        "group": "aemsync",
        "command": "aemsync.syncToAEM"
      }]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "eslint": "^4.11.0",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  },
  "repository": {
      "type": "git",
      "url": "https://github.com/Yinkai15/vscode-aem-sync.git"
  },
  "dependencies": {
    "archiver": "^2.1.1",
    "find": "^0.2.9"
  }
}
